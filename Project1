class Good {
	private:
		string series;
		string name;
		float price;
		int no;

	public:
		Good(string name, float price)
			: name(name), price(price), no(0) {}

		string getSeries() const {
			return series;
		}

		void setSeries(string series) {
			this->series = series;
		}

		string getName() const {
			return name;
		}

		void setName(string name) {
			this->name = name;
		}

		float getPrice() const {
			return price;
		}

		void setPrice(float price) {
			this->price = price;
		}

		int getNo() const {
			return no;
		}

		void setNo(int no) {
			this->no = no;
		}

		void decreaseNo(int i) {
			no -= i;
		}
};